{
    "name": "Clear Browser History",
    "version": "1.0",
    "description": "Clears all browsing data with one click.",
    "permissions": ["browsingData"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
      },
      "browser_action": {
        "default_title": "Clear Browser History",
        "default_icon": {
            "16": "images/history-16.png",
            "32": "images/history-32.png",
            "128": "images/history-128.png"
          }        
      },
      "icons": {
        "16": "images/history-16.png",
        "32": "images/history-32.png",
        "128": "images/history-128.png"
      },    
    "manifest_version": 2
  }